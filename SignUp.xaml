<Window x:Class="Theater.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theater"
        mc:Ignorable="d"
        Title="Регистрация" Height="550" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF242740">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" IsEnabled="False"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="Title" Text="Создать аккаунт"  VerticalAlignment="Center"
       HorizontalAlignment="Center" FontSize="38" Foreground="White"/>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Width="500">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="FirstName" Foreground="White" Text="Имя:" FontSize="28"/>
                    <TextBox x:Name="FirstNameBox" Grid.Column="1" Margin="20,0" VerticalContentAlignment="Center" FontSize="24" Height="40"/>
                </Grid>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="LastName" Foreground="White" Text="Фамилия:" FontSize="28"/>
                    <TextBox x:Name="LastNameBox" Grid.Column="1" Margin="20,0" VerticalContentAlignment="Center" FontSize="24" Height="40"/>
                </Grid>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="Email" Foreground="White" Text="Email:" FontSize="28"/>
                    <TextBox x:Name="EmailBox" Grid.Column="1" Margin="20,0" 
                             VerticalContentAlignment="Center" FontSize="24"
                             Height="40" TextChanged="EmailBox_TextChanged"/>
                </Grid>
                <TextBlock x:Name="EmailError" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Password" Foreground="White" Text="Пароль:" FontSize="28" Grid.Row="1"/>
                    <TextBox x:Name="PasswordBox" Grid.Column="1" Margin="20,0" VerticalContentAlignment="Center" FontSize="24" Grid.Row="1" Height="40"/>
                </Grid>
                <TextBlock x:Name="PasswordError" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                <Button Style="{StaticResource Button}" Foreground="Goldenrod" Height="50" Width="200" Margin="0 20" Content="Зарегистрироваться" Click="SignInButton_Click"/>
                <TextBlock Text="Есть аккаунт? войти" HorizontalAlignment="Center" FontSize="14" MouseDown="TextBlock_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Wheat"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
