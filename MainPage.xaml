<Page x:Class="Theater.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Theater"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1050"
      Title="Main" Loaded="OnLoad">

    <Grid d:Background="#FF242740">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Upcoming -->
            <RowDefinition Height="*"/>
            <!-- Now Playing -->
            <RowDefinition Height="Auto"/>
            <!-- Footer if needed -->
        </Grid.RowDefinitions>

        <!-- Upcoming Sessions -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Ближайшие сеансы" Style="{StaticResource HeadingText}"/>
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" 
                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <ItemsControl x:Name="UpcomingSessionsIC" ItemsSource="{Binding upcomingSessions}"
                              HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorder}" Background="#FF2A2F5A">
                                <Grid>
                                    <Image Source="{Binding Image}">
                                        <Image.Clip>
                                            <RectangleGeometry RadiusX="100" RadiusY="100" Rect="0,0,200,200"/>
                                        </Image.Clip>
                                    </Image>
                                    <StackPanel>
                                        <TextBlock Text="{Binding HallName}" Style="{StaticResource SubText}" FontSize="12"/>
                                        <TextBlock Text="{Binding PlayTitle}" FontWeight="Bold" FontSize="18" Style="{StaticResource SubText}"/>
                                        <TextBlock Text="{Binding PerformanceDateTime}" Foreground="#EAB308" Style="{StaticResource SubText}"/>
                                        <TextBlock Text="{Binding TimeRemaining}" Style="{StaticResource SubText}"/>
                                        <Button Content="Перейти к бронированию" Style="{StaticResource Button}" BorderThickness="0"
                                            Background="Transparent" Foreground="#EAB308" 
                                            HorizontalAlignment="Left" Margin="0 10 0 0"
                                            Click="UpcomingSessionButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Now Playing -->
        <StackPanel Grid.Row="2" Margin="20">
            <TextBlock Text="Сейчас в прокате" Style="{StaticResource HeadingText}"/>
            <TextBlock Text="Ознакомьтесь с нашей подборкой постановок мирового уровня. Забронируйте билеты сегодня и получите незабываемые впечатления." Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0 10" TextWrapping="Wrap" TextAlignment="Center"/>

            <!-- Filters -->
            <Border BorderThickness="0" CornerRadius="10" Background="#FF2C3050" Margin="10 0 10 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                    <TextBox x:Name="SearchBox" Style="{StaticResource FilterTextBox}" Width="400" Foreground="White" TextChanged="Search_TextChanged"/>
                    <ComboBox x:Name="FilterByGenre" Style="{StaticResource FilterCombo}" Width="150" 
                              SelectedIndex="0" ItemsSource="{Binding genres}" SelectionChanged="FilterByGenre_SelectionChanged">
                    </ComboBox>
                    <ComboBox x:Name="SortBy" Style="{StaticResource FilterCombo}" Width="150" SelectedIndex="0" SelectionChanged="Sort_SelectionChanged">
                        <ComboBoxItem>Сортировка: A-Я</ComboBoxItem>
                        <ComboBoxItem>Сортировка: Я-А</ComboBoxItem>
                        <ComboBoxItem>Цена: по возрастанию</ComboBoxItem>
                        <ComboBoxItem>Цена: по убыванию</ComboBoxItem>
                    </ComboBox>
                    <Button Content="Сбросить" Style="{StaticResource Button}" Foreground="White" Click="ResetFilters_Click"/>
                </StackPanel>
            </Border>

            <ItemsControl x:Name="CurrentPlaysIC" ItemsSource="{Binding FiltedPerformances}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="5" HorizontalAlignment="Stretch" Background="#FF2A2F5A" Margin="10 10">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FF2A2F4A" Margin="2,2,2,0" Height="250" Width="Auto" CornerRadius="5 5 0 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.RowSpan="3" Source="{Binding Image}"/>
                                        <Border CornerRadius="10" Background="Goldenrod"
                                                Grid.Row="1" Margin="10 5" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Genre}" FontSize="14" FontWeight="Bold"
                                                       VerticalAlignment="Center" Margin="10 0"/>
                                        </Border>
                                        <TextBlock Grid.Row="2" Text="{Binding Title}" FontSize="20" FontWeight="Black"
                                                   VerticalAlignment="Center" Foreground="White" Margin="10 0"/>
                                    </Grid>    
                                </Border>
                                <TextBlock Text="{Binding Description}" FontSize="14" Foreground="LightGray"
                                           Margin="10" TextWrapping="NoWrap"/>
                                <Grid Width="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Rating}" FontWeight="Bold" FontSize="14" Foreground="LightGray" Margin="10"/>
                                        <Image Grid.Column="1" Source="pack://application:,,,/icons/star_f.png" Width="20"/>
                                    </Grid>
                                    <TextBlock FontSize="14" Foreground="LightGray" Grid.Column="1"
                                               Margin="10" HorizontalAlignment="Right">
                                        <Run Text="{Binding DurationMinutes}" FontWeight="Bold"/>
                                        <Run Text="Минут"/>
                                    </TextBlock>
                                </Grid>
                                <TextBlock FontSize="14" Foreground="LightGray" Grid.Column="1"
                                           Margin="10" HorizontalAlignment="Left">
                                    <Run Text="{Binding PriceStr}" FontWeight="Bold"/>
                                    <Run Text="₽/чел."/>
                                </TextBlock>
                                <Button Style="{StaticResource BuyButton}" Content="Купить билеты" Background="Goldenrod" Click="UpcomingSessionButton_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
