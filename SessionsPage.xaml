<Page x:Class="Theater.SessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Theater"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1050"
      Title="SessionsPage" Loaded="Page_Loaded">

    <Grid d:Background="#FF242740">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBox x:Name="ByName" Height="30" Width="300" Margin="10 0" TextChanged="TextChanged" Foreground="Black">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}"/>
                                        <TextBlock Text="Поиск по названию" Foreground="Gray" IsHitTestVisible="False"
                                                   VerticalAlignment="Center" Margin="7 0 0 0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=InnerTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBox Background="Transparent" BorderThickness="0" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},UpdateSourceTrigger=PropertyChanged, Path=Text, Mode=TwoWay}"
                                                 VerticalAlignment="Center" Margin="5 0 0 0" x:Name="InnerTextBox" Foreground="Black"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox x:Name="ByHall" Height="30" Width="300" Margin="10 0" TextChanged="TextChanged" Foreground="Black">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}"/>
                                        <TextBlock Text="Поиск по залу" Foreground="Gray" IsHitTestVisible="False"
                                                   VerticalAlignment="Center" Margin="7 0 0 0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=InnerTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBox Background="Transparent" BorderThickness="0" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},UpdateSourceTrigger=PropertyChanged, Path=Text, Mode=TwoWay}"
                                                 VerticalAlignment="Center" Margin="5 0 0 0" x:Name="InnerTextBox" Foreground="Black"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button Content="Добавить сессию" Margin="10 0"
                    Style="{StaticResource Button}" Height="40" Foreground="White"
                    Click="AddSession_Click"/>
        </StackPanel>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding sessionsView}"
                      VirtualizingPanel.IsVirtualizing="True" VerticalAlignment="Top"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorder}" Height="60" Width="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Id}" VerticalAlignment="Center" 
                               HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
                               Foreground="White"/>
                            <Border Grid.Column="1" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>
                            <TextBlock Grid.Column="2" Text="{Binding PlayTitle}" VerticalAlignment="Center" 
                               HorizontalAlignment="Left" FontSize="20" 
                               Foreground="White" Margin="10, 0"/>
                            <Border Grid.Column="3" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>
                            <TextBlock Grid.Column="4" Text="{Binding HallName}" VerticalAlignment="Center" 
                               HorizontalAlignment="Left" FontSize="20" 
                               Foreground="White" Margin="10, 0"/>
                            <Border Grid.Column="5" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Grid.Column="6" Text="{Binding PerformanceDate}" VerticalAlignment="Center" 
                               HorizontalAlignment="Left" FontSize="20" 
                               Foreground="White" Margin="10, 0"/>
                            <Border Grid.Column="7" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>
                            <TextBlock Grid.Column="8" VerticalAlignment="Center" 
                               HorizontalAlignment="Left" FontSize="20" 
                               Foreground="White" Margin="10, 0">
                        <Run Text="{Binding Price}"/>
                        <Run Text=" ₽"/>
                            </TextBlock>
                            <Border Grid.Column="9" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="10">
                                <Button Width="30" Height="30" Margin="2, 0" Style="{StaticResource Button}" Click="EditButton_Click">
                                    <Image Source="pack://Application:,,,/icons/edit.png"/>
                                </Button>
                                <Button Width="30" Height="30" Margin="2, 0" Style="{StaticResource Button}" Click="DeleteButton_Click">
                                    <Image Source="pack://Application:,,,/icons/delete.png"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.RowSpan="2" Visibility="Hidden" Background="Black" Opacity="0.6" x:Name="BlurGrid">
            <Grid.Effect>
                <BlurEffect KernelType="Gaussian" Radius="100" RenderingBias="Quality"/>
            </Grid.Effect>
        </Grid>
        <Border Visibility="Hidden" Grid.RowSpan="2" Style="{StaticResource CardBorder}" Height="600" Width="600"
                VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="SessionWindow">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Спектакль:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Row="1" Text="Зал:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Row="2" Text="Дата:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Row="3" Text="Время:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Row="4" Text="Цена билета:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>

                <ComboBox x:Name="PlayCB" Background="#1E293B" BorderBrush="#475569" Grid.Column="1" Grid.Row="0" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24"/>
                <ComboBox x:Name="HallCB" Background="#1E293B" BorderBrush="#475569" Grid.Column="1" Grid.Row="1" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24"/>
                <DatePicker x:Name="DateP" SelectedDate="{Binding SelectedDate}" Grid.Column="1" Grid.Row="2"
                            Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" Height="40"
                            FontSize="24"/>
                <TextBox x:Name="TimeTB" Grid.Column="1" Grid.Row="3" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24"/>
                <TextBox x:Name="PriceTB" Grid.Column="1" Grid.Row="4" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24"/>

                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Отмена" Height="50" Width="200" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 20"
                            Style="{StaticResource Button}" Foreground="White" FontSize="24" Click="Cancel_Click"/>
                    <Button Content="Ок" Height="50" Width="200"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 20"
                            Style="{StaticResource Button}" Foreground="White" FontSize="24" Click="Ok_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
