<Page x:Class="Theater.PlaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Theater"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1050"
      Title="PlaysPage" Loaded="Page_Loaded">

    <Grid d:Background="#FF242740">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">

            <TextBox x:Name="ByName" Height="30" Width="300" Margin="10 0" TextChanged="TextChanged" Foreground="Black">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}"/>
                                        <TextBlock Text="Поиск по названию" Foreground="Gray" IsHitTestVisible="False"
                                           VerticalAlignment="Center" Margin="7 0 0 0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=InnerTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBox Background="Transparent" BorderThickness="0" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},UpdateSourceTrigger=PropertyChanged, Path=Text, Mode=TwoWay}"
                                         VerticalAlignment="Center" Margin="5 0 0 0" x:Name="InnerTextBox" Foreground="Black"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox x:Name="ByGenre" Height="30" Width="300"  Margin="10 0" TextChanged="TextChanged" Foreground="Black">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}"/>
                                        <TextBlock Text="Поиск по жанру" Foreground="Gray" IsHitTestVisible="False"
                                           VerticalAlignment="Center" Margin="7 0 0 0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=InnerTextBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBox Background="Transparent" BorderThickness="0" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},UpdateSourceTrigger=PropertyChanged, Path=Text, Mode=TwoWay}"
                                         VerticalAlignment="Center" Margin="5 0 0 0" x:Name="InnerTextBox" Foreground="Black"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button Content="Добавить спектакль" Margin="10 0"
            Style="{StaticResource Button}" Height="40" Foreground="White"
            Click="AddSession_Click"/>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding playsView}" Grid.Row="1" VerticalAlignment="Top"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorder}" Height="60" Width="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Id}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White"/>
                            <Border Grid.Column="1" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="2"/>
                            <Border Grid.Column="3" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Genre}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="4"/>
                            <Border Grid.Column="5" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Director}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="6"/>
                            <Border Grid.Column="7" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Age}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="8"/>
                            <Border Grid.Column="9" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Duration}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="10"/>
                            <Border Grid.Column="11" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding Description}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" 
           Foreground="White" Grid.Column="12" TextTrimming="CharacterEllipsis"/>
                            <Border Grid.Column="13" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <TextBlock Text="{Binding ImageUrl}" VerticalAlignment="Center" 
           HorizontalAlignment="Left" Margin="10, 0" FontSize="20" TextTrimming="CharacterEllipsis"
           Foreground="White" Grid.Column="14"/>
                            <Border Grid.Column="15" Background="LightSlateGray" Opacity="0.3" CornerRadius="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Column="16">
                                <Button Width="30" Height="30" Margin="2, 0" Style="{StaticResource Button}" Click="EditButton_Click">
                                    <Image Source="pack://Application:,,,/icons/edit.png"/>
                                </Button>
                                <Button Width="30" Height="30" Margin="2, 0" Style="{StaticResource Button}" Click="DeleteButton_Click">
                                    <Image Source="pack://Application:,,,/icons/delete.png"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.RowSpan="2" Visibility="Hidden" Background="Black" Opacity="0.6" x:Name="BlurGrid">
            <Grid.Effect>
                <BlurEffect KernelType="Gaussian" Radius="100" RenderingBias="Quality"/>
            </Grid.Effect>
        </Grid>
        <Border Visibility="Hidden" Grid.RowSpan="2" Style="{StaticResource CardBorder}" Height="Auto" Width="800"
        VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="SessionWindow">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Название:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>
                <TextBlock Grid.Row="1" Text="Жанр:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>
                <TextBlock Grid.Row="2" Text="Директор:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Row="3" Text="Возр. ограничения:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>
                <TextBlock Grid.Row="4" Text="Длительность (мин.):" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>
                <TextBlock Grid.Row="5" Text="Описание:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>
                <TextBlock Grid.Row="6" Text="URL картинки:" Foreground="White" FontSize="24" VerticalAlignment="Center" Margin="10 20"/>

                <TextBox x:Name="TitleTB" Grid.Column="1" Grid.Row="0" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>
                <ComboBox x:Name="GenreCB" Background="#1E293B" BorderBrush="#475569" Grid.Column="1" Grid.Row="1" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>
                <ComboBox x:Name="DirectorCB" Background="#1E293B" BorderBrush="#475569" Grid.Column="1" Grid.Row="2" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>
                <TextBox x:Name="AgeTB" Grid.Column="1" Grid.Row="3" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>

                <TextBox x:Name="DurationTB" Grid.Column="1" Grid.Row="4" Height="Auto"  VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>
                <TextBox x:Name="DescriptionTB" Grid.Column="1" Grid.Row="5" Height="Auto" TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>
                <TextBox x:Name="UrlTB" Grid.Column="1" Grid.Row="6" Height="Auto"  VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="24" Margin="30, 0"/>

                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Отмена" Height="50" Width="200" 
                    VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 20"
                    Style="{StaticResource Button}" Foreground="White" FontSize="24" Click="Cancel_Click"/>
                    <Button Content="Ок" Height="50" Width="200"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 20"
                    Style="{StaticResource Button}" Foreground="White" FontSize="24" Click="Ok_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
